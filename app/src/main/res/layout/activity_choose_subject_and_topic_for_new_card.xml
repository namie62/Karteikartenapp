<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    tools:context=".createactivities.ChooseSubjectAndTopicForNewCardActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Fach auswählen:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/select_subject_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/textView"
        android:spinnerMode="dropdown"
        tools:ignore="MissingConstraints"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/progress_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/select_subject_spinner"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/roboto_regular"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Thema auswählen:"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/select_topic_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/progress_text_view"
        android:spinnerMode="dropdown"
        tools:ignore="MissingConstraints"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/select_subject_spinner"
        android:layout_marginTop="10dp" >

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="center"
            android:onClick="closeWindow"
            android:text="Abbrechen" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/create_card_btn"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:onClick="createCard"
            android:text="Erstellen" />

    </LinearLayout>

</LinearLayout>