<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateTopicPopUp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:text="Fach auswählen:"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="0dp" />

    <Spinner
        android:id="@+id/spinner_Fachauswählen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="48dp"
        android:spinnerMode="dropdown"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/editTexteingabe"
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="48dp"
        android:fontFamily="@font/cairo"
        android:hint="Neues Thema eingeben"
        android:maxHeight="120dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/buttonabbrechen"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="48dp"
        android:background="@android:color/tertiary_text_light"
        android:gravity="center"
        android:text="Abbrechen"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:targetApi="s" />

    <Button
        android:id="@+id/buttonFacherstellen"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_gravity="right"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="48dp"
        android:background="@android:color/tertiary_text_light"
        android:gravity="center"
        android:text="Thema erstellen"
        android:textColor="@color/black"
        android:textSize="13sp"
        tools:targetApi="s" />


</RelativeLayout>