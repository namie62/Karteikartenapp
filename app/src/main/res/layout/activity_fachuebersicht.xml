<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fachuebersicht">

    <Button
        android:id="@+id/neuesThema"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:layout_marginEnd="16dp"
        app:icon="@android:drawable/ic_input_add"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:id="@+id/fachliste"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/neuesThema"
        />

    <Button
        android:id="@+id/abfragefach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Abfrage"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/lernmodusfach" />

    <Button
        android:id="@+id/lernmodusfach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lernen"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/zurueckzumstart"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="59dp"
        android:layout_height="51dp"
        android:onClick="zurueck"
        app:icon="?attr/homeAsUpIndicator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/reininsFach"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="vorwaerts"
        android:text="vorwÃ¤rts"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/abfragefach" />

    <EditText
        android:id="@+id/fachname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Lernapp"
        app:layout_constraintStart_toEndOf="@+id/zurueckzumstart"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>